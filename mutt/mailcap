# Images
image/jpg; ~/.mutt/open.sh %s jpg
image/jpeg; ~/.mutt/open.sh %s jpg
image/pjpeg; ~/.mutt/open.sh %s jpg
image/png; ~/.mutt/open.sh %s png
image/gif; ~/.mutt/open.sh %s gif

# PDF
application/pdf; ~/.mutt/open.sh %s pdf

# HTML
text/html; ~/.mutt/open.sh %s html

# Unidentified files
application/octet-stream; ~/.mutt/open.sh %s data
