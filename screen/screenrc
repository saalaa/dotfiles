startup_message off
autodetach on

defscrollback 1024

vbell on

activity "activity: ~%"
vbell_msg "bell: ~%"


#vbell_msg "   Wuff  ----  Wuff!!  "

defnonblock 5

#termcapinfo xterm     ti@:te@
#termcapinfo linux "ve=\E[?25h\E[?17;0;64c"


# Corrects scrolling
termcapinfo xterm* ti@:te@

# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I" 
# tell screen how to set colors. AB = background, AF=foreground 
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm' 
# erase background with current bg color 
defbce "on" 

# Nice but not needed
#caption always "%{=kW}%-w%{+b wk}%n %t%{-}%+w%{wk} %-= %C %A"
caption string '%{= kW}%-Lw%{= kG}%50> %n%f %t%{= kw}%+Lw%< %{= kG}%-=%H %l %{-}'
caption string '%{= kw}%{= kG}%50> %n%f %t %{-}%W %-=%H %{-}'
caption always



bind ^k
#bind L
bind ^\
# Make them better
bind \\ quit
bind K kill
bind I login on
bind O login off
bind } history


