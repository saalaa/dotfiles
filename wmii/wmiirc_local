#!/bin/sh

export MODKEY=Mod1

export WMII_TERM=gnome-terminal

export WMII_NORMCOLORS='#888888 #222222 #222222'
export WMII_FOCUSCOLORS='#ffffff #222222 #222222'

export WMII_BACKGROUND='#333333'
export WMII_FONT='Ubuntu Mono'

export TRAYER_TINT='0x222222'

wmiir write /tagrules <<!
/Firefox.*/ -> 1
/Skype.*/ -> 6
/Pidgin.*/ -> 6
/trayer.*/ -> 6
/MPlayer.*/ -> ~
/Gimp.*/ -> gimp
/.*/ -> sel
/.*/ -> 1
!

wmiir write /colrules <<!
/gimp/ -> 17+83+41
/2/ -> 60+40
!

status() {
    . ~/.wmii/status
}

~/.wmii/autostart &
